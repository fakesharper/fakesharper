{
	"name": "fakesharper",
	"publisher": "fakesharper",
	"displayName": "fakesharper",
	"description": "ReSharper features for Visual Studio Code",
	"version": "0.1.0",
	"preview": true,
	"icon": "assets/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/fakesharper/fakesharper"
	},
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Linters"
	],
	"keywords": [
		"C#",
		"csharp",
		".NET",
		".NET Core",
		"ASP.NET",
		"dotnet",
		"resharper"
	],
	"activationEvents": [
		"onLanguage:csharp",
		"onCommand:fakesharper.inspectcode",
		"onCommand:fakesharper.cleandiagnostic",
		"onCommand:fakesharper.cleandiagnostics",
		"onCommand:fakesharper.cleanupcode",
		"onCommand:fakesharper.refreshdiagnostics"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "fakesharper.inspectcode",
				"title": "[fakesharper] Inspect Code"
			},
			{
				"command": "fakesharper.cleandiagnostic",
				"title": "[fakesharper] Clean Diagnostics"
			},
			{
				"command": "fakesharper.cleandiagnostics",
				"title": "[fakesharper] Clean All Diagnostics"
			},
			{
				"command": "fakesharper.cleanupcode",
				"title": "[fakesharper] Cleanup Code"
			},
			{
				"command": "fakesharper.refreshdiagnostics",
				"title": "[fakesharper] Refresh Diagnostics"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.31.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"fast-xml-parser": "^3.16.0"
	}
}
